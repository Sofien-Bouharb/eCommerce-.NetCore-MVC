@model eCommerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>

            <p class="text-muted">@Model.Category?.Name</p>

            <h3 class="text-primary">@Model.Price.ToString("C")</h3>

            <p class="mt-3">@Model.Description</p>

            @if (ViewBag.InCart == true)
            {
                <a class="btn btn-danger btn-lg mt-4"
                   asp-controller="Cart"
                   asp-action="Toggle"
                   asp-route-id="@Model.Id">
                    Remove from Cart
                </a>
            }
            else
            {
                <a class="btn btn-success btn-lg mt-4"
                   asp-controller="Cart"
                   asp-action="Toggle"
                   asp-route-id="@Model.Id">
                    Add to Cart
                </a>
            }

        </div>
    </div>
</div>
