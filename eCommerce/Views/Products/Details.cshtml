@model eCommerce.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>

            <p class="text-muted">@Model.Category?.Name</p>

            <h3 class="text-primary">@Model.Price.ToString("C")</h3>

            <p class="mt-3">@Model.Description</p>

            @if (ViewBag.InCart == true)
            {
                <!-- REMOVE BUTTON -->
                <a class="btn btn-danger btn-lg mt-4"
                   asp-controller="Cart"
                   asp-action="Remove"
                   asp-route-id="@Model.Id">
                    Remove from Cart
                </a>
            }
            else
            {
                <!-- ADD WITH QUANTITY -->
                <form asp-controller="Cart" asp-action="Add" method="post" class="mt-4">
                    <input type="hidden" name="id" value="@Model.Id" />

                    <div class="d-flex align-items-center gap-3">
                        <label><strong>Quantity:</strong></label>
                        <input type="number" name="quantity" value="1" min="1"
                               class="form-control" style="width: 80px;" />
                    </div>

                    <button type="submit" class="btn btn-success btn-lg mt-3">
                        Add to Cart
                    </button>
                </form>
            }

        </div>
    </div>
</div>
