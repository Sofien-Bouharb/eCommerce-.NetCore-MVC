@model IEnumerable<eCommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mt-3 mb-4">Products</h2>
<form method="get" class="mb-4">
    <div class="row">

        <!-- CATEGORY FILTER -->
        <div class="col-md-4">
            <label class="form-label"><strong>Category</strong></label>
            <select name="categoryId" class="form-select">
                <option value="">All Categories</option>

                @foreach (var cat in ViewBag.Categories)
                {
                    <option value="@cat.Id"
                            selected="@(ViewBag.SelectedCategory == cat.Id)">
                        @cat.Name
                    </option>

                }
            </select>
        </div>

        <!-- MIN PRICE -->
        <div class="col-md-3">
            <label class="form-label"><strong>Min Price</strong></label>
            <input type="number" name="minPrice" step="0.01" class="form-control"
                   value="@(ViewBag.MinPrice ?? "")" placeholder="0" />
        </div>

        <!-- MAX PRICE -->
        <div class="col-md-3">
            <label class="form-label"><strong>Max Price</strong></label>
            <input type="number" name="maxPrice" step="0.01" class="form-control"
                   value="@(ViewBag.MaxPrice ?? "")" placeholder="2000" />
        </div>

        <!-- BUTTON -->
        <div class="col-md-2 d-flex align-items-end gap-2">

            <button type="submit" class="btn btn-primary w-50">Filter</button>

            <a href="@Url.Action("Index", "Products")" class="btn btn-secondary w-50">
                Reset
            </a>

        </div>


    </div>
</form>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height:180px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Category?.Name</p>
                    <p class="fw-bold text-primary">@item.Price.ToString("C")</p>

                    <a class="btn btn-primary w-100"
                       asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@item.Id">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-controller="Products"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-categoryId="@ViewBag.SelectedCategory"
                       asp-route-minPrice="@ViewBag.MinPrice"
                       asp-route-maxPrice="@ViewBag.MaxPrice"
                       asp-route-query="@ViewBag.Query">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}

