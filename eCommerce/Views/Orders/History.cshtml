@model List<eCommerce.Models.Order>

<h2 class="mb-4">My Orders</h2>

@if (!Model.Any())
{
    <p>You have not placed any orders yet.</p>
}
else
{
    <div class="list-group">
        @foreach (var order in Model)
        {
            <div class="list-group-item mb-3">
                <h5>Order #@order.Id</h5>
                <p>
                    <strong>Date:</strong> @order.CreatedAt.ToString("dd/MM/yyyy HH:mm") <br />
                    <strong>Total:</strong> @order.Total.ToString("0.00") DT <br />
                    <strong>Shipping address:</strong> @order.ShippingAddress
                </p>

                <strong>Items:</strong>
                <ul>
                    @foreach (var item in order.Items)
                    {
                        <li>
                            <strong>@item.Product.Name</strong> —
                            Qty: @item.Quantity —
                            Unit: @item.UnitPrice.ToString("0.00") DT —
                            Line Total: @(item.Quantity* item.UnitPrice) DT
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
}
